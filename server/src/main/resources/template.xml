<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <proxy>
        <enabled>true</enabled>
        <inbound>
            <domain>hyperscala.org</domain>
            <domain>www.hyperscala.org</domain>
            <domain>hyperscala.com</domain>
            <domain>www.hyperscala.com</domain>
        </inbound>
        <outbound>
            <host>127.0.0.1</host>
            <port>8888</port>
        </outbound>
    </proxy>
    <application>
        <enabled>true</enabled>
        <type>dependency</type>
        <group>org.hyperscala</group>
        <artifact>hyperscala-site</artifact>
        <version>latest</version>
        <mainClass>org.hyperscala.site.HyperscalaSite</mainClass>
        <arg>-port</arg>
        <arg>8888</arg>
    </application>
</configuration>